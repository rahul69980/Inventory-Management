<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Inventory Item</title>
  <link href="http://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f9faff;
      padding: 2rem;
      max-width: 600px;
      margin: auto;
    }
    h1 {
      color: #4a90e2;
      margin-bottom: 1rem;
      text-align: center;
    }
    form {
      display: grid;
      gap: 1rem;
    }
    label {
      font-weight: 600;
      color: #444;
    }
    input, select {
      padding: 0.5rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    input[readonly] {
      background-color: #eee;
    }
    button {
      background: #4a90e2;
      border: none;
      color: white;
      padding: 0.6rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      font-size: 1rem;
    }
    button:hover {
      background: #357ab8;
    }
    a {
      display: inline-block;
      margin-top: 1rem;
      color: #4a90e2;
      text-decoration: none;
    }
  </style>
</head>
<body>

    <%- include('partials/back-button') %>

  <h1>Edit Inventory Item</h1>
  <form id="editItemForm">
    <label for="sku">SKU / Item Code (read-only)</label>
    <input type="text" id="sku" name="sku" readonly />

    <label for="name">Item Name</label>
    <input type="text" id="name" name="name" required />

    <label for="type">Item Type</label>
    <select id="type" name="type" required>
      <option value="Raw Material">Raw Material</option>
      <option value="Finished Product">Finished Product</option>
    </select>

    <label for="unit">Unit of Measure</label>
    <input type="text" id="unit" name="unit" required />

    <label for="minThreshold">Minimum Threshold</label>
    <input type="number" id="minThreshold" name="minThreshold" min="0" />

    <label for="qtyOnHand">Quantity On Hand</label>
    <input type="number" id="qtyOnHand" name="qtyOnHand" min="0" />

    <label for="qtyReserved">Quantity Reserved</label>
    <input type="number" id="qtyReserved" name="qtyReserved" min="0" />

    <label for="qtyOrdered">Quantity Ordered</label>
    <input type="number" id="qtyOrdered" name="qtyOrdered" min="0" />

    <button type="submit">Save Changes</button>
  </form>

  <a href="/inventory-list">Back to Inventory List</a>

  <script>
    const params = new URLSearchParams(window.location.search);
    const skuParam = params.get('sku');

    if (!skuParam) {
      alert('No SKU provided!');
      window.location.href = 'inventory-list.html';
    }

    const inventory = JSON.parse(localStorage.getItem('inventory')) || [];
    const item = inventory.find(i => i.sku === skuParam);

    if (!item) {
      alert('Item not found!');
      window.location.href = 'inventory-list.html';
    }

    // Populate form
    const form = document.getElementById('editItemForm');
    form.sku.value = item.sku;
    form.name.value = item.name;
    form.type.value = item.type;
    form.unit.value = item.unit;
    form.minThreshold.value = item.minThreshold;
    form.qtyOnHand.value = item.qtyOnHand;
    form.qtyReserved.value = item.qtyReserved;
    form.qtyOrdered.value = item.qtyOrdered;

    form.addEventListener('submit', (e) => {
      e.preventDefault();

      // Update item in inventory
      item.name = form.name.value.trim();
      item.type = form.type.value;
      item.unit = form.unit.value.trim();
      item.minThreshold = parseInt(form.minThreshold.value) || 0;
      item.qtyOnHand = parseInt(form.qtyOnHand.value) || 0;
      item.qtyReserved = parseInt(form.qtyReserved.value) || 0;
      item.qtyOrdered = parseInt(form.qtyOrdered.value) || 0;

      localStorage.setItem('inventory', JSON.stringify(inventory));

      // Add to transaction log
      const transactions = JSON.parse(localStorage.getItem('transactions')) || [];
      const timestamp = new Date().toISOString().slice(0, 19).replace('T', ' ');
      transactions.push(`[${timestamp}] Edited item ${item.sku}`);
      localStorage.setItem('transactions', JSON.stringify(transactions));

      alert('Item updated successfully!');
      window.location.href = 'inventory-list.html';
    });
  </script>
</body>
</html>
