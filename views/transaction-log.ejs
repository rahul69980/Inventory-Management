<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Transaction Log</title>
  <link href="http://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f9faff;
      padding: 2rem;
      max-width: 600px;
      margin: auto;
    }
    h1 {
      color: #4a90e2;
      margin-bottom: 1rem;
      text-align: center;
    }
    ul {
      list-style: none;
      padding: 0;
      max-height: 400px;
      overflow-y: auto;
      border: 1px solid #ddd;
      border-radius: 6px;
      background: #eef6ff;
    }
    li {
      padding: 0.8rem;
      border-bottom: 1px solid #ccc;
      font-size: 0.9rem;
      color: #333;
    }
    li:last-child {
      border-bottom: none;
    }
    a {
      display: inline-block;
      margin-top: 1rem;
      color: #4a90e2;
      text-decoration: none;
      font-weight: 600;
    }
  </style>
</head>
<body>

    <%- include('partials/back-button') %>

  <h1>Transaction Log</h1>
  <ul id="transactionList">
    <!-- Transactions loaded here -->
  </ul>
  <a href="/inventory-list">Back to Inventory List</a>

  <script>
    const ul = document.getElementById('transactionList');
    const transactions = JSON.parse(localStorage.getItem('transactions')) || [];

    if (transactions.length === 0) {
      ul.innerHTML = '<li>No transactions logged yet.</li>';
    } else {
      transactions.forEach(tx => {
        const li = document.createElement('li');
        li.textContent = tx;
        ul.appendChild(li);
      });
    }
  </script>
</body>
</html>
